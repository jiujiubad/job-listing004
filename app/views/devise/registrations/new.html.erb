<div class="login-wrap">
  <div class="moving-bg">
    <div class="image-content">
      <img src="http://ww2.sinaimg.cn/large/006tNc79gy1ff0lk9e1w0j31kw11xb2b.jpg" class="change">
    </div>
  </div>

  <div class="registration-wrap">
    <div class="registration-block">
      <div class="content clearfix">
        <div class="right-part fr">
          <div class="devise">
            <h2><img src="http://ww3.sinaimg.cn/large/006tNc79gy1ff0l0t8djsj301s01sa9u.jpg">注册</h2>

            <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
              <%= f.error_notification %>
<input type="text" placeholder="Value" />
              <div class="form-inputs">
                <input type="text" placeholder="Value" />
                <%= f.input :email, required: true, autofocus: true, label: false, placeholder: "邮箱", input_html: { id: 'input-111' } %>

                <%= f.input :password, required: true, label: false, placeholder: "密码 6-16个字符，区分大小写" %>
                <%= f.input :password_confirmation, required: true, label: false, placeholder: "确认密码" %>
                <%= f.input :is_admin,
                            :label => false,
                            :collection => [[false, '个人'], [true, '企业']],
                            :label_method => :last,
                            :value_method => :first,
                            :as => :radio_buttons,
                            :item_wrapper_class => 'inline',
                            :checked => false %>
              </div>

              <div class="form-actions">
                <%= f.button :submit, "注册", class: "registration-btn" %>
              </div>
            <% end %>

            <div class="tip">
              <%= render "devise/shared/links" %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

</div>
