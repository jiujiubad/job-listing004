<div class="row-2">
  <div class="col-md-9 col-centered">
    <div class="panel panel-default panel-1">
      <div class="panel-body">

        <div class="col-md-12">
          <p class="font-0 job-title-0">浏览职缺</p>
        </div>
<!-- 排序 -->
        <div class="col-md-8">
          <div class="dropdown">
            <button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
              职位排序
              <span class="caret"></span>
            </button>
            <ul class="dropdown-menu" aria-labelledby="dropdownMenu1">
              <li><%= link_to("按照薪资上限排序", jobs_path(:order => "by_upper_bound")) %></li>
              <li><%= link_to("按照薪资下限排序", jobs_path(:order => "by_lower_bound")) %></li>
              <li><%= link_to("按照发表时间排序", jobs_path ) %></li>
            </ul>
          </div>
        </div>
<!-- 工作 描述 -->
        <div class="col-md-8">
        <% @jobs.each do |job| %>
          <div class="job-list">
            <ul>
              <li>
                <!-- <a href="/job_detail/1411172989.html?ka=job_list_1" ka="job_list_1" data-itemid="1" data-lid="4-5yaLmZh" data-index="1" target="_blank"> -->
                  <div class="job-primary">
<!-- ①工作区 -->
                    <div class="col-md-2">
                      <img class="job-logo" src='http://i.imgur.com/afZPGbL.png'>
                    </div>
<!-- ②工作区 -->
                    <div class="col-md-7 info-primary">
                      <h3 class="name">
                        <%= link_to(job.title, job_path(job)) %>
                      </h3>
                        <p class="saraly">
                          <span class="red">
                        <br>
                          </span>
                        </p>
                      <p style="font-size:25px"><%= job.description %></p>
                     <br>
                     <p style="font-size:1em;color:#555555"> <%= job.created_at %></p>
                    </div>
<!-- ③工作区 -->
                    <div class="col-md-3 info-comapny">
                      <div class="company-text">
                          <div class="company-logo" style="font-size:20px;">
                            <%= job.wage_lower_bound*0.001 %>k - <%= job.wage_upper_bound*0.001 %>k
                          </div>
                          <p style="margin-top: 110px; color:#555555 "><%= job.contact_email %></p>
                      </div>
                    </div>
                  </div>
                <!-- </a> -->
              </li>
            </div>
        <% end %>
        </div>
<!-- 推荐 职位 -->
        <div class="col-md-4">
          <div>
              <div class="suggest-title">
                <h3> 职位推荐</h3>
              </div>
              <% @suggests.each do |job| %>
                  <div class="col-xs-10 col-xs-offset-1 suggest-content">
                      <div>
                        <h4>
                          <%= link_to job_path(job), target: "_blank" do %>
                              <%= job.title %> [<%= job.location %>]
                          <% end %>
                        </h4>
                      </div>
                      <div>
                        <p>招募职位：<%= job.category %></p>
                      </div>
                      <div>
                        <p>团队名称：<%= job.company %></p>
                      </div>
                  </div>
              <% end %> <!-- 结束@suggests循环 -->
          </div>
        </div>
<!-- 分页 pagination -->
        <div class="col-md-8 paginate-job">
          <div class="text-center">
            <%= will_paginate @jobs, renderer: BootstrapPagination::Rails %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
